{
  "name": "voter-canvassing-tool",
  "version": "1.0.0",
  "description": "A minimal canvassing web app for Empower's take-home assignment.",
  "main": "index.js",
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "test": "cd backend && npm test",
    "build:shared-types": "cd shared-types && npm install && npm run build",
    "seed-db": "docker exec voter-canvassing-tool-db-1 sh -c \"mysql -u canvasser -pcanvasserpass canvassing < /docker-entrypoint-initdb.d/seed.sql\"",
    "setup": "chmod +x ./scripts/setup.sh && ./scripts/setup.sh",
    "cleanup": "chmod +x ./scripts/cleanup.sh && ./scripts/cleanup.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clevergadget/canvas-tool.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/clevergadget/canvas-tool/issues"
  },
  "homepage": "https://github.com/clevergadget/canvas-tool#readme"
}
